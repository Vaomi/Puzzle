<Window x:Class="Puzzle.ThemePuzzle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Puzzle"
        mc:Ignorable="d"
        Title="Выбор темы пазла" Height="850" Width="1950" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize" WindowStyle="ToolWindow" Background="#FF020202">
    <Grid Width="1950">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Image/Background.jpg" Stretch="UniformToFill"/>
        <Label Content="Выберите тему пазла" Margin="0,100,0,0" FontSize="37" Height="96.223" VerticalAlignment="Top" Width="394.616" HorizontalAlignment="Center" Foreground="Cyan"/>
        <Button x:Name="Animal" Margin="110,255,1490,0" VerticalAlignment="Top" Height="200" Click="Animal_Click">
            <Image x:Name="B_Animal"/>
        </Button>
        <Button x:Name="Architecture" Margin="570,255,1030,0" VerticalAlignment="Top" Height="200" Click="Archit_Click">
            <Image x:Name="B_Arch"/>
        </Button>
        <Button x:Name="Nature" Margin="1030,255,570,0" VerticalAlignment="Top" Height="200" Click="Nature_Click">
            <Image x:Name="B_Nature"/>
        </Button>
        <Button x:Name="Game" Margin="110,543,1490,0" VerticalAlignment="Top" Height="200" Click="Games_Click">
            <Image x:Name="B_Game"/>
        </Button>
        <Button Margin="570,543,1030,0" VerticalAlignment="Top" Height="200" Visibility="Hidden" d:IsHidden="True">
            <Image x:Name="B_Snake"/>
        </Button>
        <Button Margin="1030,543,570,0" VerticalAlignment="Top" Height="200" Visibility="Hidden" d:IsHidden="True">
            <Image x:Name="B_D"/>
        </Button>
        <Button x:Name="Cartoons" Margin="1490,255,110,0" VerticalAlignment="Top" Height="200" Click="Cartoons_Click">
            <Image x:Name="B_Cartoon"/>
        </Button>
        <Button Margin="1490,543,110,0" VerticalAlignment="Top" Height="200" Visibility="Hidden" d:IsHidden="True">
            <Image x:Name="B_R"/>
        </Button>

    </Grid>
</Window>
