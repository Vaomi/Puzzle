<Window x:Class="Puzzle.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Puzzle"
        mc:Ignorable="d"
        Title="MainMenu" Height="750" Width="700" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="StartGame" Content="Начать игру" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="226.327" Height="55.546" FontSize="25" Click="StartGame_Click"/>
        <Button x:Name="Records" Content="Рекорды" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Width="226.327" Height="55.547" FontSize="25" Click="Records_Click"/>
        <Button x:Name="AboutTheProgram" Content="О программе" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Width="226.327" Height="55.547" FontSize="25" Click="AboutTheProgram_Click"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Center" Margin="0,600,0,0" VerticalAlignment="Top" Width="226.328" Height="55.547" FontSize="25" Click="Exit_Click"/>
    </Grid>
</Window>
