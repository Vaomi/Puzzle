<Window x:Class="Puzzle.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Puzzle"
        mc:Ignorable="d"
        Title="Главное меню" Height="579" Width="420.5" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize" Icon="Image(Forms)/ICO/ICO_MainMenu.ico" Background="#FF040303">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Image(Forms)/Background.jpg " Stretch="UniformToFill"/>
        <Button x:Name="StartGame" Content="Начать игру" HorizontalAlignment="Center" Margin="0,0,0,383" Width="226" FontSize="25" Click="StartGame_Click" Background="#FF85EBF5" Height="56" VerticalAlignment="Bottom"/>
        <Button x:Name="AboutTheProgram" Content="О программе" HorizontalAlignment="Center" Margin="0,0,0,239" Width="226" FontSize="25" Click="AboutTheProgram_Click" Background="#FF85EBF5" Height="56" VerticalAlignment="Bottom"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Center" Margin="0,0,0,94" Width="226" FontSize="25" Click="Exit_Click" Background="#FF85EBF5" Height="56" VerticalAlignment="Bottom"/>
    </Grid>
</Window>