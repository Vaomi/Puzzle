<Window x:Class="Puzzle.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Puzzle"
        mc:Ignorable="d"
        Title="Вход в игру" Height="270" Width="480" WindowStartupLocation="CenterScreen" Icon="Image/ICO/ICO_Registration.ico" ResizeMode="NoResize" Background="#FF0A0909">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Image/Background.jpg " Stretch="UniformToFill"/>
        <TextBox HorizontalAlignment="Center" Height="23.993" Margin="0,111.107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159.398" Text="Ваш никнейм?" TextDecorations="{x:Null}" FontStyle="Italic" Opacity="0.8"/>
        <Label Content="Добро пожаловать в игру. &#xD;&#xA;   Введите свой никнейм" Foreground="Cyan" HorizontalAlignment="Center" Height="57.617" Margin="0,33.589,0,0" VerticalAlignment="Top" Width="221.981" FontSize="16"/>
        <Button x:Name="helloButton" Content="Вход" HorizontalAlignment="Center" Margin="0,151.799,0,0" VerticalAlignment="Top" Width="109.768" Click="helloButton_Click" FontSize="16"/>
    </Grid>
</Window>
